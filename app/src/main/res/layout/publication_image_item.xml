<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginVertical="18dp"
        android:background="@drawable/background_24px"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="24dp" />

    <TextView
        style="@style/GilroyFontThemeMedium"
        android:id="@+id/image_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_12px"
        android:backgroundTint="#CC1F1F1F"
        android:layout_margin="18dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:textSize="@dimen/text_12px"
        android:textColor="@color/white"
        android:text="1-3"
        app:layout_constraintBottom_toBottomOf="@+id/image"
        app:layout_constraintStart_toStartOf="@+id/image" />

</androidx.constraintlayout.widget.ConstraintLayout>