<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudHunter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="GilroyFontTheme" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/gilroy_regular</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
    </style>

    <style name="GilroyFontThemeBold" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="GilroyFontThemeMedium" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/gilroy_medium</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
    </style>

    <style name="GilroyFontThemeSemibold" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/gilroy_semibold</item>
        <item name="android:fontFamily">@font/gilroy_semibold</item>
    </style>

    <style name="GilroyFontThemeBlack" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/gilroy_black</item>
        <item name="android:fontFamily">@font/gilroy_black</item>
    </style>

    <style name="AppcompatButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_16px</item>
        <item name="android:background">@drawable/background_12px</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="fontFamily">@font/gilroy_medium</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="android:textColor">@color/mat_white</item>
        <item name="android:radius">12dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:gravity">center</item>
        <item name="boxBackgroundColor">@color/on_background</item>
        <item name="hintTextAppearance">@style/GilroyFontTheme</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
    </style>

    <style name="TextInputEdittext" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="fontFamily">@font/gilroy_regular</item>\
        <item name="android:fontFamily">@font/gilroy_regular</item>
        <item name="backgroundTint">@color/on_background</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">18dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">14dp</item>
        <item name="android:textColorHint">@color/tertiary</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_16px</item>
        <item name="android:textColorHighlight">#33051367</item>
    </style>

    <style name="AppCompatButtonOutlined" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_16px</item>
        <item name="android:background">@drawable/primary_button_outlined</item>
        <item name="background">@drawable/primary_button_outlined</item>
        <item name="fontFamily">@font/gilroy_medium</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:radius">12dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="AppCompatButtonWithoutBackground" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_16px</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
        <item name="fontFamily">@font/gilroy_medium</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:radius">12dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Theme.StudHunter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.StudHunter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.StudHunter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>